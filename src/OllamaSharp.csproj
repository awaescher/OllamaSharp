<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net8.0</TargetFrameworks>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>API bindings for Ollama</Title>
		<Copyright>Andreas Wäscher</Copyright>
		<PackageIcon>Ollama.png</PackageIcon>
		<Description>
			This project adds bindings to the Ollama API to include offline LLMs into your .NET apps
		</Description>
		<PackageProjectUrl>https://github.com/awaescher/OllamaSharp</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryUrl>https://github.com/awaescher/OllamaSharp</RepositoryUrl>
		<PackageTags>ollama;ollama-api;api;llm</PackageTags>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<Version>1.1.1</Version>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Ollama.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>
